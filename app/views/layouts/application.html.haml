!!!
%html
  %head
    %title LoveLetterMashup
    %link{href: "http://fonts.googleapis.com/css?family=Rosario:400,400italic,700,700italic", rel: "stylesheet", type: "text/css"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"} LoveLetterMashup
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          - if current_user
            %ul.nav.navbar-nav
              %li
                %a{href: "/letters/new"} Mash a Letter
              %li
                %a{href: "/letters"} Dashboard
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              %li
                %a{href: "/logout"} Logout
            - else
              %li
                %a{href: "/login"} Login
            
    = js extend_gritter :fade_in_speed => "fast", :fade_out_speed => 1000, :time => 2500, :position => :top_right
    
  
    = gflash
    
    = yield

#fade
