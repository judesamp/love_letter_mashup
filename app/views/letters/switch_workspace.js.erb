var workspace = '<%= escape_javascript @workspace %>';

if (workspace == "snippet_workspace") {
	$('.snippet_view_workspace').attr("data-letter-id","<%= @current_letter.id %>");
}



$('.main_content').hide("slide", { direction: "right" }, 800, function() {

  $('.main_content').html("");
  $('.workspace_background_image').css("background-image", '')
  $('.main_content').html('<%= escape_javascript render(:partial => "letters/#{@workspace}")%>');
  $('.workspace_background_image').css("background-image", '<%= asset_path("paper_it.png") %>')
  $('.workspace_buttons').fadeOut();
  
}).delay(300);


$('.main_content').show("slide", { direction: "left" }, 800, function() {
	
  $('.floating_nav').fadeIn('slow');

  if (workspace == "snippet_workspace") {
		<%= add_gritter("Choose the snippets you want to include, then arrange them in the order you want them to appear in your letter.", :title => "Instructions", :sticky => true) %>
	}

});

    
   
  









