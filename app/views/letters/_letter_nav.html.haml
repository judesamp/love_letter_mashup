- if previous_letter.present?
  = link_to "Previous", letter_path(previous_letter, offset: offset - 1, direction: "previous"), remote: true, class: "btn-default btn-primary btn direction_button"
- else
  = link_to "Previous", root_path, class: "btn-default btn btn-primary  disabled direction_button"

- if next_letter.present?
  = link_to "Next", letter_path(next_letter, offset: offset + 1, direction: "next"), remote: true, class: "btn-default btn btn-primary direction_button"
- else
  = link_to "Next", root_path, class: "btn-default btn-primary btn disabled direction_button"

