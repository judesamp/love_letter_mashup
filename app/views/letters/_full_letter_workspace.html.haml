= link_to "Back", new_letter_path, class: "btn-primary btn"

.row
  .container
    .col-lg-10.col-md-10.col-lg-offset-1.col-md-offset-1.main_content

      .letter_nav
        - if @previous_letter.present?
          = link_to "Previous", letter_path(@previous_letter, offset: @offset - 1, direction: "previous"), remote: true, class: "btn-default btn btn-block"
        - else
          = link_to "Previous", root_path, class: "btn-default btn btn-block disabled"

        - if @next_letter.present?
          = link_to "Next", letter_path(@next_letter, offset: @offset + 1, direction: "next" ), remote: true, class: "btn-default btn btn-block"
        - else
          = link_to "Next", root_path, class: "btn-default btn btn-block disabled"

      .letter_content
        = render "letters/content"
