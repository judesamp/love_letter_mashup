- author.snippets.each do |snippet|
  .row.author_snippets{id: "author-id-#{author.id}"}
    .col-lg-1.col-md-1.col-sm-1.col-lg-offset-2.col-md-offset-2.col-sm-offset-2
      = check_box_tag snippet.id, snippet.id, letter.snippets.include?(snippet), data: { "snippet-id" => snippet.id }
     
    .col-lg-9.col-md-9.col-sm-9
      = snippet.content 