- author.snippets.each do |snippet|
  .col-lg-2.col-md-2.col-sm-2
    .btn-group{"data-toggle" => "buttons"}
      %label.btn.btn-primary.answer
        - if letter.snippets.include?(snippet)
          = check_box_tag snippet.id, snippet.id, letter.snippets.include?(snippet), class: 'checkbox', data: { "snippet-id" => snippet.id }
          Remove
        - else
          = check_box_tag snippet.id, snippet.id, letter.snippets.include?(snippet), class: 'checkbox', data: { "snippet-id" => snippet.id }
          Add

  .col-lg-10.col-md-10.col-sm-10
    %h4.snippet_margin= snippet.content  

  %br
  %br
  %br